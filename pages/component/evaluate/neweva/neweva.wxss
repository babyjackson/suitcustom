/* pages/component/evaluate/neweva/neweva.wxss */
@import '../../../common/common.wxss';
.evaluate{
 
  margin: 0 15rpx;
  border-bottom: 2px solid #eee9ef;
  padding-bottom: 30rpx;
}
.evaluate .user{
  height: 55rpx;
  padding-top: 10rpx;
  overflow: hidden;
}
.evaluate .user .img{
  width:45rpx;
  height: 45rpx;
  border-radius: 50%;
  overflow: hidden;
}
.evaluate .user .img image{
  width: 45rpx;
  height: 45rpx;
  display: block;
}
.evaluate .user .text{
  width: 240rpx;
  line-height: 45rpx;
  font-size: 20rpx;
  color: #bfbdc0;
}
.evaluate .describe{
  font-size: 22rpx;
  color:#000000;
  line-height: 30rpx;
}
.evaluate .sai view{
  width: 80rpx;
  height: 80rpx;
  border-radius: 3rpx;
  float: left;
  margin: 10rpx;
}
.evaluate .sai view image{
  width: 80rpx;
  height: 80rpx;
}
.evaluate .time{
 color: #b2b0b3;
line-height: 30rpx;
 font-size: 18rpx;

}