/* pages/component/order/paybill/paybill.wxss */
@import '../../../common/common.wxss';
page{
  background: #f7f7f7;
}
.h20{
  height: 20rpx;
}
.h25{
  height: 25rpx;
}
.section{
  padding: 0 ;
  height: 99rpx;
  border-bottom: 2rpx solid #f7f7f7;
  overflow: hidden;
  background: #fff;
}
.section label{
  font-size: 30rpx;
  line-height: 99rpx;
  color: #171717;
  text-indent: 25rpx;
}
.section .sumofmoney{
  width: 430rpx;
  height: 99rpx;
  display: block;
  border: 0;
  outline: 0;
  text-align: right;
  font-size: 28rpx;
  margin-right: 25rpx;
}
.tips{
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  font-size: 24rpx;
  color: #14aa08;
  background: #fff;
  padding-right: 25rpx;
}
.coupon{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #f7f7f7;
  background: #fff;
}
.coupon text{
  text-indent: 25rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #151515;
}
.coupon .no_coupon{
  text-align: right;
  line-height: 100rpx;
  color: #8b8b8b;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.coupon .no_coupon text{
  color: #fd546f;
  font-size: 30rpx;
  text-indent: 25rpx;
}
.coupon .no_coupon image{
  width: 20rpx;
  height: 25rpx;
  display: block;
  margin-top: 40rpx;
}
.payamount{
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
}
.payamount text{
  color: #0d0d0d;
  text-indent: 25rpx;
  font-size: 30rpx;
}
.payamount .sf{
  text-align: right;
  color: #f93c5b;
  margin-right: 25rpx;
}
.wxpayfor{
  width: 670rpx;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  margin: 0 auto;
  background: #1b1b1b;
  padding: 0;
  font-size: 35rpx;
  color: #fff;
  border-radius: 5rpx;
}