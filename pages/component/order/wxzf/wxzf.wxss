}
.fr{
  float:right;
}
.clearfix:after{
 content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.zftop{
  width: 100%;
  height: 440rpx;
}
.zftop .zfr{
  width: 180rpx;
  height: 270rpx;
  margin: 70rpx auto;
}
.zftop .zfr .qyuan{
  width: 180rpx;
  height:180rpx;
  text-align: center;
  line-height: 180rpx;
  font-size: 80rpx;
  border-radius: 50%;
