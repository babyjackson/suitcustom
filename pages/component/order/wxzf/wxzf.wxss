  background: #efeff7;
  line-height: 40rpx;
}
.ddh text{
  font-size: 28rpx;
  color: #444443;
  display: block;
  width: 120rpx;
}
.ddh input{
  width: 500rpx;
  text-align: right;
  outline: 0;
  border: 0;
  height: 40rpx;
  color: #ababab;
}
.wxzfbtn{
